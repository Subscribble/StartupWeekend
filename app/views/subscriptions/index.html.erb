<div class="page-header">
  
  <h1>Subscribble <small>Save Time, Save Money, Save Hassle</small></h1>
  
</div>


<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <strong>Warning: </strong>Your <a href="#" class="alert-link">Netflix</a> subscription is going to expire within a week.
</div>

<h3>Your Subscriptions</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Next Payment Due</th>
      <th>Expires</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.sub_name %></td>
        <td>$<%= subscription.sub_price %>.00</td>
        <td><%= subscription.pay_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= subscription.exp_date.to_formatted_s(:long_ordinal) %></td>

        

        <td><a href=<%= subscription_path(subscription) %>><button class="btn btn-primary" id="destroy">
                <i class="glyphicon glyphicon-search"></i> Details</button></a>
        </td>

        <td><a href=<%=edit_subscription_path(subscription) %>><button class="btn btn-primary" id="destroy">
                <i class="glyphicon glyphicon-pencil"></i> Edit</button></a>
        </td>

        <td><a href=<%=subscription.id %>><button class="btn btn-danger" id="destroy">
                <i class="glyphicon glyphicon-trash"></i> Unsubscribe</button></a>
        </td>

        
      </tr>
    <% end %>
  </tbody>
</table>
<a href=<%= new_subscription_path %>><button class="btn btn-success" id="destroy">
                <i class="glyphicon glyphicon-plus-sign"></i> Add a Subscription</button></a>
<hr>
